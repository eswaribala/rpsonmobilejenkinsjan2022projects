pipeline {
    agent any
    tools {
        maven 'maven'
        jdk 'java8'
    }
    stages {
        stage('Build') {
            environment {
                PROJECT_DIR = ./cucumberdemo"
            }
            steps {
                echo 'maven clean'
                bat ' mvn -f %PROJECT_DIR%\\pom.xml clean install'  
            }
        }
    }
    post {
            success {
                        echo 'Now Archiving'
                        junit allowEmptyResults: true, testResults: '**/surefire-reports/*.xml'
                }
        }
}